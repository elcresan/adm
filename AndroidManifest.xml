<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.boox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.boox.SplashScreenActivity"
            android:label="@string/title_activity_splash_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.boox.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.boox.BookFragment"
            android:label="@string/title_activity_book_fragment" >
        </activity>
        <activity
            android:name="com.example.boox.BookActivity"
            android:label="@string/title_activity_book_activity" >
        </activity>
        <activity
            android:name="com.example.boox.SearchBookActivity"
            android:label="@string/title_activity_book_search" >
        </activity>
        <activity
            android:name="com.example.boox.SearchBookResultActivity"
            android:label="@string/title_activity_book_search_result" >
        </activity>
        <activity
            android:name="com.example.boox.TabsActivity"
            android:label="@string/title_activity_tabs" >
        </activity>
        <activity
            android:name="com.example.boox.BookListActivity"
            android:label="@string/title_activity_book_list" >
        </activity>
        <activity
            android:name="com.example.boox.CrossingListActivity"
            android:label="@string/title_activity_crossing_list" >
        </activity>
        <activity
            android:name="com.example.boox.CrossingActivity"
            android:label="@string/title_activity_crossing" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.boox.CrossingListActivity" />
        </activity>
        <activity
            android:name="com.example.boox.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.boox.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.example.boox.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.example.boox.UserProfileActivity"
            android:label="@string/title_activity_user_profile" >
        </activity>
        <activity
            android:name="com.example.boox.SearchFriendActivity"
            android:label="@string/title_activity_search_friend" >
        </activity>
        <activity
            android:name="com.example.boox.AddNewListActivity"
            android:label="@string/title_activity_add_new_list" >
        </activity>
        <activity
            android:name="com.example.boox.FriendsBooksActivity"
            android:label="@string/title_activity_friend_books_activity" >
        </activity>
    </application>

</manifest>