<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.boox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> 

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.boox.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookFragment"
            android:label="@string/title_activity_book_fragment" >
        </activity>
        <activity
            android:name=".BookActivity"
            android:label="@string/title_activity_book_activity" >
        </activity>
        <activity
            android:name=".SearchBookActivity"
            android:label="@string/title_activity_buscar_libros" >
        </activity>
        <activity
            android:name="com.example.boox.ResultadoBusquedaLibrosActivity"
            android:label="@string/title_activity_resultado_busqueda_libros" >
        </activity>
        <activity
            android:name="internet.PruebaInternet"
            android:label="@string/title_activity_prueba_internet" >
        </activity>
        <activity
            android:name=".TabsActivity"
            android:label="@string/title_activity_tabs" >
        </activity>
        <activity
            android:name=".BookListActivity"
            android:label="@string/title_activity_book_list" >
        </activity>
        <activity
            android:name=".CrossingListActivity"
            android:label="@string/title_activity_crossing_list" >
        </activity>
        <activity
            android:name=".CrossingActivity"
            android:label="@string/title_activity_crossing" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.boox.CrossingListActivity" />
        </activity>
        <activity
            android:name=".UserActivity"
            android:label="@string/title_activity_user" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
    </application>

</manifest>